{
  "id": "link-to-attachment-upgrade",
  "name": "链接转附件 - 防盗链升级版",
  "description": "基于飞书官方链接转附件插件架构升级，支持防盗链图片转换和授权码输入",
  "version": "1.0.0",
  "author": "罗浏镇",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/link-to-attachment-upgrade"
  },
  "keywords": [
    "飞书",
    "多维表格",
    "链接转附件",
    "防盗链",
    "图片转换"
  ],
  "categories": [
    "productivity",
    "automation"
  ],
  "icon": "",
  "homepage": "",
  "runtime": "full",
  "capabilities": {
    "fetch": {
      "corsProxy": true,
      "domainWhitelist": [
        "s.500fd.com",
        "*.500fd.com",
        "api.allorigins.win",
        "corsproxy.io",
        "api.codetabs.com"
      ]
    },
    "external": true
  },
  "actions": [
    {
      "id": "convert-links",
      "name": "转换链接为附件",
      "description": "将指定字段中的图片链接转换为附件",
      "formItems": [
        {
          "itemId": "urlField",
          "label": "URL字段",
          "component": "Text",
          "required": true,
          "description": "选择包含图片链接的文本字段"
        },
        {
          "itemId": "attachmentField",
          "label": "附件字段",
          "component": "Attachment",
          "required": true,
          "description": "选择目标附件字段"
        },
        {
          "itemId": "authCode",
          "label": "授权码",
          "component": "Input",
          "required": false,
          "description": "可选：输入授权码以访问需要认证的图片链接"
        },
        {
          "itemId": "antiLeech",
          "label": "处理防盗链图片",
          "component": "Checkbox",
          "required": false,
          "defaultValue": true,
          "description": "启用防盗链处理，支持s.500fd.com等特殊链接"
        }
      ]
    }
  ]
}